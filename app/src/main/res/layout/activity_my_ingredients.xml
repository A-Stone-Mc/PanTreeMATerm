<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/secondbg"
    tools:context=".MyIngredientsActivity">

    <TextView
        android:id="@+id/myIngredientsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="My Ingredients"
        android:textColor="@color/ic_launcher_background"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ingredientsListLayout"
        android:layout_width="336dp"
        android:layout_height="465dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myIngredientsTitle"></LinearLayout>

    <Button
        android:id="@+id/searchByIngredientsBtn"
        android:layout_width="145dp"
        android:layout_height="73dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/ic_launcher_background"
        android:text="Search By Ingredients"
        android:textColor="#88FDA8"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredientsListLayout" />

    <Button
        android:id="@+id/addIngredientsBtn"
        android:layout_width="145dp"
        android:layout_height="73dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/ic_launcher_background"
        android:text="Add Ingredient"
        android:textColor="#88FDA8"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredientsListLayout" />

    <Button
        android:id="@+id/clearAllIngredientsBtn"
        android:layout_width="305dp"
        android:layout_height="53dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/ic_launcher_background"
        android:text="Clear All Ingredients"
        android:textColor="#88FDA8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchByIngredientsBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>